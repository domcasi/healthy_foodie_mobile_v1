<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/background_color"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="213dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/takeassessment" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:padding="15dp"
        android:text="@string/assessments"
        android:textColor="#444b46"
        android:textSize="40sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/pretestbutt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@color/colorPrimaryDark"
        android:text="@string/take_pretest"
        android:textColor="@color/text_color" />

    <Button
        android:id="@+id/playgamebutt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@color/colorPrimaryDark"
        android:text="@string/play_game"
        android:textColor="@color/text_color" />

    <Button
        android:id="@+id/postestbutt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@color/colorPrimaryDark"
        android:text="@string/take_post_test"
        android:textColor="@color/text_color" />

</LinearLayout>
