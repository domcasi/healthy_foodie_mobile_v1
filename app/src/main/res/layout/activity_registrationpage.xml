<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/anotherbg"
    tools:context=".registrationpage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="557dp"
        android:layout_marginBottom="43dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.448">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@color/background_color"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_register"
                style="@style/titlesign"
                android:text="@string/register"
                android:textColor="@color/text_color" />

            <TextView
                android:id="@+id/name"
                style="@style/subtitle"
                android:text="@string/name"
                android:textColor="@android:color/white" />

            <EditText
                android:id="@+id/input_name"
                style="@style/contents"
                android:ems="10"
                android:hint="@string/enteryourname"
                android:inputType="textPersonName"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white" />

            <TextView
                android:id="@+id/username"
                style="@style/subtitle"
                android:text="Age:"
                android:textColor="@android:color/white" />

            <EditText
                android:id="@+id/input_age"
                style="@style/contents"
                android:ems="10"
                android:hint="Enter Age"
                android:inputType="textPersonName"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white" />

            <TextView
                android:id="@+id/textView15"
                style="@style/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Gender"
                android:textColor="@android:color/white" />

            <RadioGroup
                android:layout_width="312dp"
                android:layout_height="86dp">

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Male"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Female"
                    android:textColor="@android:color/white" />

            </RadioGroup>

            <TextView
                android:id="@+id/textView16"
                style="@style/subtitle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Grade:"
                android:textColor="@android:color/white" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RadioButton
                    android:id="@+id/radioButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Grade 1"
                    android:textColor="@android:color/white" />

                <RadioButton
                    android:id="@+id/radioButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Grade 2"
                    android:textColor="@android:color/white" />

                <RadioButton
                    android:id="@+id/radioButton5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Grade 3"
                    android:textColor="@android:color/white" />

                <RadioButton
                    android:id="@+id/radioButton6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Grade 4"
                    android:textColor="@android:color/white" />

                <RadioButton
                    android:id="@+id/radioButton7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Grade 5"
                    android:textColor="@android:color/white" />

                <RadioButton
                    android:id="@+id/radioButton8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Grade 6"
                    android:textColor="@android:color/white" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView14"
                style="@style/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/username"
                android:textColor="@android:color/white" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!--<android.support.design.widget.TextInputEditText-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_margin="10dp"-->
                    <!--android:ems="10"-->
                    <!--android:hint="Enter Username"-->
                    <!--android:inputType="text|textPersonName"-->
                    <!--android:textColor="@android:color/white"-->
                    <!--android:textColorHint="@android:color/white" />-->
                <EditText
                    android:id="@+id/input_username"
                    style="@style/contents"
                    android:ems="10"
                    android:hint="@string/enterusername"
                    android:textColor="@android:color/white"
                    android:textColorHint="#ffffff" />


            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/password"
                style="@style/subtitle"
                android:text="@string/password"
                android:textColor="@android:color/white" />


            <EditText
                android:id="@+id/input_password"
                style="@style/contents"
                android:ems="10"
                android:hint="@string/enterpassword"
                android:inputType="textPassword"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white" />

            <TextView
                android:id="@+id/confirm_password"
                style="@style/subtitle"
                android:text="@string/confirm"
                android:textColor="@android:color/white" />

            <EditText
                android:id="@+id/input_confirm"
                style="@style/contents"
                android:ems="10"
                android:hint="@string/reenterpassword"
                android:inputType="textPassword"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView17"
                    style="@style/subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Account Type:"
                    android:textColor="@android:color/white" />

                <RadioButton
                    android:id="@+id/account_hybrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hybrid"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/account_testonly"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Test Only"
                    android:textColor="@android:color/white" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="30dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/reg_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@color/orange"
                    android:text="@string/register"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/cancel_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryDark"
                    android:text="@string/cancel"
                    android:textColor="@android:color/white" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>